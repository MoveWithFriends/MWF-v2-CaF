DROP TABLE IF EXISTS `Available`;
DROP TABLE IF EXISTS `Likes`;
DROP TABLE IF EXISTS `Timeslot`;
DROP TABLE IF EXISTS `Day`;
DROP TABLE IF EXISTS `Interest`;
DROP TABLE IF EXISTS `Users`;


CREATE TABLE `Users` (
	`FirstName` VARCHAR (40),
	`LastName` VARCHAR (40),
	`Preposition` VARCHAR (10),
	`email` VARCHAR (100) PRIMARY KEY,
	`UserName` VARCHAR (40),
	`PhoneNumber` VARCHAR(20),
	`Gender` VARCHAR (20),
	`BirthDate` DATE,
	`Password` VARCHAR (255),
	`PreferredGender` VARCHAR (20)
) ;

CREATE TABLE `Interest` (
	`Interest` VARCHAR (50) PRIMARY KEY
) ;

CREATE TABLE `Day` (
	`Day` VARCHAR (12) PRIMARY KEY
) ;

CREATE TABLE `Timeslot` (
	`Timeslot` VARCHAR (12) PRIMARY KEY
) ;

CREATE TABLE `Likes` (
	`email` VARCHAR (100),
	`Interest` VARCHAR (40),
	PRIMARY KEY (`email`, `Interest`),
	FOREIGN KEY (`email`) REFERENCES `Users` (`email`)
		ON DELETE CASCADE
		ON UPDATE CASCADE,
	FOREIGN KEY (`Interest`) REFERENCES `Interest`(`Interest`)
		ON DELETE CASCADE
		ON UPDATE CASCADE
) ;

CREATE TABLE `Available` (
	`id_User` INT (10),
	`id_Day` INT(10),
	`id_Timeslot` INT(10),
	PRIMARY KEY (`id_User`, `id_Day`, `id_Timeslot`),
	FOREIGN KEY (`id_User`) REFERENCES `users` (`id`)
		ON DELETE CASCADE
		ON UPDATE CASCADE,
	FOREIGN KEY (`id_Day`) REFERENCES `Day`(`id`)
		ON DELETE CASCADE
		ON UPDATE CASCADE,
	FOREIGN KEY (`id_Timeslot`) REFERENCES `Timeslot`(`id`)
		ON DELETE CASCADE
		ON UPDATE CASCADE
) ;
